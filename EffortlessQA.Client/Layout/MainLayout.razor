
@inherits LayoutComponentBase
@using EffortlessQA.Client.Services
@using MudBlazor
@inject NavigationManager Navigation
@inject AuthService AuthService

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">EffortlessQA</MudText>
        <MudSpacer />
        <GlobalSearch />
        @if (IsAuthenticated)
        {
            <MudMenu Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit">
                <MudMenuItem OnClick="@Logout">Logout</MudMenuItem>
            </MudMenu>
        }
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1">
        <MudNavMenu>
            @if (IsAuthenticated)
            {
                <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
                <MudNavLink Href="/projects" Icon="@Icons.Material.Filled.Work">Projects</MudNavLink>
                <MudNavLink Href="/test-suites" Icon="@Icons.Material.Filled.Folder">Test Suites</MudNavLink>
                <MudNavLink Href="/test-cases" Icon="@Icons.Material.Filled.Description">Test Cases</MudNavLink>
                <MudNavLink Href="/test-runs" Icon="@Icons.Material.Filled.PlayArrow">Test Runs</MudNavLink>
                <MudNavLink Href="/defects" Icon="@Icons.Material.Filled.BugReport">Defects</MudNavLink>
                <MudNavLink Href="/requirements" Icon="@Icons.Material.Filled.List">Requirements</MudNavLink>
                <MudNavLink Href="/reports" Icon="@Icons.Material.Filled.BarChart">Reports</MudNavLink>
                @if (IsAdmin)
                {
                    <MudNavLink Href="/tenant" Icon="@Icons.Material.Filled.Business">Tenant</MudNavLink>
                    <MudNavLink Href="/permissions" Icon="@Icons.Material.Filled.Security">Permissions</MudNavLink>
                }
            }
            else
            {
                <MudNavLink Href="/login" Icon="@Icons.Material.Filled.Login">Login</MudNavLink>
                <MudNavLink Href="/register" Icon="@Icons.Material.Filled.AppRegistration">Register</MudNavLink>
            }
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool IsAuthenticated => AuthService.IsAuthenticated;
    private bool IsAdmin => AuthService.IsAdmin;

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}